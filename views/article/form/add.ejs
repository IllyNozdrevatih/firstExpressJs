<%- include('../../layout/header'); -%>
    <h1>Add article</h1>
    <form method="POST" action="<% if(update){%>/article/update<%}else{%>/article/create<%}%>">
        <div class="form-group">
        <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" <% if(update){%> value="<%=article.title %>" <%}%>>
        </div>
        <div class="form-group">
        <label for="imageUrl">image url</label>
            <input type="text" class="form-control" id="imageUrl" name="imageUrl"  <% if(update){%> value="<%=article.imageUrl %>" <%}%>>
        </div>
        <% if(categories){%>
            <% for(category of categories){ %>
                <div class="form-check">
                    <% if(article.categories.find( element => element.id === category.id ) && update ){ %>
                        <input class="form-check-input" type="checkbox" id="cat_<%=category.id%>" value="<%= category.id%>" name="categories" checked>
                    <%} else {%>
                        <input class="form-check-input" type="checkbox" id="cat_<%=category.id%>" value="<%= category.id%>" name="categories">
                    <%}%>
                    <label class="form-check-label" for="cat_<%=category.id%>"><%= category.title %></label>
                </div>
            <%}%>
        <%}%>
        <% if(update){%>
            <input type="hidden" name="artId" id="" value="<%=article.id%>">
        <%}%>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>  
<%- include('../../layout/footer'); -%>